{
  "name": "my-electron-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "dev": "concurrently \"cross-env NODE_ENV=development vite\" \"cross-env NODE_ENV=development wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-to-print": "^3.2.0",
    "sass-embedded": "^1.93.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.BUnnyBakers",
    "productName": "BUnnyBakers",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
